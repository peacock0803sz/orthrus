# Orthrus Project Configuration
# Place this file as `.orthrus.toml` in your Sphinx project root

[sphinx]
# Source directory (relative to project root)
source_dir = "docs"
# Build output directory (relative to project root)
build_dir = "_build/html"

[sphinx.server]
# Port for sphinx-autobuild (0 = auto-assign)
port = 0

[python]
# Python interpreter path
interpreter = "python"
# Example for venv: interpreter = ".venv/bin/python"

[editor]
# External editor command
command = "nvim"
